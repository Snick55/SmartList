<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/large_space"
        android:layout_gravity="bottom|center"
        android:backgroundTint="@color/title_view_color"
        android:layout_width="195dp"
        android:layout_height="37dp"/>
    
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <TextView
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/nameTV"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text ="siamndlknda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/white"
        android:layout_width="91dp"
        android:layout_height="82dp">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/secondary_background"
            android:layout_width="73dp"
            android:layout_height="66dp">
            <ImageView
                android:visibility="gone"
                android:layout_gravity="center"
                android:src="@drawable/ic_list_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/done_cont_desc" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>
    





</FrameLayout>